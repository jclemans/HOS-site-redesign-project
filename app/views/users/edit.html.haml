%h2= h @user.djname

.container
  .form
    = simple_form_for @user do |f|
      = f.error_messages
      .form-group
        .form-control
          = f.input :name
        .form-control
          = f.input :djname, label: "DJ Name"
        .form-control
          = f.input :phone
        .form-control
          = f.input :email
          = f.button :submit, ('Update'), :class => 'btn btn-success'
