        .link
          %a{:href => "/programs"} SCHEDULE
        .link
          %a{:href => "/contact"} CONTACT
        .link
          %a{:href => "/apply"} JOIN
        .link
          %a{:href => "#", :onclick => "window.open('/listen_live','Listen Live','height=270,width=400'); return false"} LISTEN
      #column_left
        #content
          = yield
      #column_right
        #live_player
          %h1 LISTEN RIGHT NOW
          %h2 (No media player required)
